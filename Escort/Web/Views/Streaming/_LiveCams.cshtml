@model List<Shared.Model.Escort.LiveStreamInfo>
@{
    Layout = null;
} 
<!--liveCams-->
@if (Model.Count > 0)
{
    <Section class="liveCams">
        <div class="container">
            <div class="col-md-6"  style="margin-bottom:22px">
                <h2><span>Live</span> Cams</h2>
            </div>
            @if (Model.Count > 5)
            {
                <div class="row">
                    
                    <div class="col-sm-12 d-flex align-items-center justify-content-between mb-3">
                        <h2><span>Live</span> Cams</h2>
                        <div>
                            <a href="@Url.Action("LiveCams","streaming")" class="btn btn-outline-primary viewAllBtn">View All</a>
                        </div>
                    </div>
                </div>
            }


            <div class="row">
                <div id="owl-demo" class="owl-carousel owl-theme">

                    @foreach (var liveescort in Model)
                    {
                        <div class="col item">
                            <div class="camsBlog">
                                <div class="position-relative escortsBlog">

                                    <a href="@liveescort.ReturnUrl">

                                        <img class="img-fluid escortImg" src="@Url.Content("~/assets/images/est-ht-default-profile.png")" data-src="@liveescort.Profile" style="height:150px !important" data-type="image">
                                    </a>
                                    <div class="liveView"><span></span> Live</div>
                                </div>
                                <div class="nameCamsUser">@liveescort.DisplayName</div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </Section>
}

<!--liveCams-->